@model IEnumerable<phone_BETA_1.Models.NHOMHANG>

@{
    ViewBag.Title = "NhomHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> NHÓM HÀNG </h2>

<p>
    @Html.ActionLink("Tạo mới", "ThemNhomHang")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_NH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name_NH)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_NH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name_NH)
        </td>
        <td>
            @Html.ActionLink("Sửa", "SuaNhomHang", new {  id=item.ID_NH }) 
        </td>
    </tr>
}

</table>
