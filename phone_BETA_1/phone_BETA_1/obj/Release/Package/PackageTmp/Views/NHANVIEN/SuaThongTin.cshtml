@model phone_BETA_1.Models.NHANVIEN

@{
    ViewBag.Title = "SuaThongTin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="visibility: hidden;">
            @Html.LabelFor(model => model.ID_Admin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ID_Admin, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name_Admin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name_Admin, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sex, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select htmlattributes="{ class = form-control }" id="Sex" name="Sex" class="form-control text-box single-line valid" aria-invalid="false">
                    <option value="Nam"> Nam </option>
                    <option value="Nữ"> Nữ </option>
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line valid" data-val="true" data-val-date="Ngày sinh phải ở dạng Ngày/Tháng/Năm." id="DateOfBirth" name="DateOfBirth" type="date" value="" placeholder="Ngày sinh" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateOfWork, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line valid" data-val="true" data-val-date="Ngày làm việc phải ở dạng Ngày/Tháng/Năm." id="DateOfWork" name="DateOfWork" type="date" value="" placeholder="Ngày làm việc"/>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Salary, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line valid" data-val="true" data-val-number="Lương phải để ở dạng số" id="Salary" name="Salary" type="text" value=@Model.Salary aria-describedby="Salary-error" aria-invalid="false" readonly/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("ThongTinNV","NHANVIEN", new { id = Session["ID_Admin"] })"> Quay về </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
