@model IEnumerable<phone_BETA_1.Models.SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

@foreach (phone_BETA_1.Models.SANPHAM item in ViewBag.listProducts)
 {
    <div class="col-md-4 product-men">
        <div class="men-pro-item simpleCart_shelfItem">
            <div class="men-thumb-item">
                <a href="@Url.Action("Details", "Home", new {  id = item.ID_SP })"><img style="object-fit: cover;" src="@Url.Content(item.Photo)" width="165" height="150" alt=""></a>
            </div>
            <div class="item-info-product ">
                <h4>
                    <a href=""> @item.Name_SP </a>
                </h4>
                <div class="info-product-price">
                    <span class="item_price"> @item.Price_SP VNĐ </span>
                </div>
                <div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                    <form action="" method="post">
                        <fieldset>
                            @Html.ActionLink("Thêm vào giỏ", "OrderNow", "Cart", new { id = item.ID_SP }, null)
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
 }



