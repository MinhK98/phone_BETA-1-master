@model phone_BETA_1.Models.SANPHAM

@{
    ViewBag.Title = "ThemSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> THÊM MỚI SẢN PHẨM </h2>

@using (Html.BeginForm("ThemSanPham", "NHANVIEN", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name_SP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name_SP, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price_SP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price_SP, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Year_SP, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Year_SP, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TraGop, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TraGop, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TinhTrang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PhuKien, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PhuKien, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ImageFile" required>
            </div>
        </div>

        <!-- Thêm 3 khóa ngoại -->
        <div class="form-group">
            @Html.LabelFor(model => model.ID_NH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select htmlattributes="{ class = form-control }" id="ID_NH" name="ID_NH" class="form-group" aria-invalid="false">
                    <option value="1"> Tầm trung </option>
                    <option value="2"> Giá rẻ </option>
                    <option value="3"> Cao cấp </option>
                    <option value="4"> Cận cao cấp </option>
                    <option value="5"> Tân trang </option>
                    <option value="6"> Xách tay </option>
                    <option value="7"> Hàng cũ </option>
                    <option value="8"> Second hand </option>
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_LH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select htmlattributes="{ class = form-control }" id="ID_LH" name="ID_LH" class="form-group" aria-invalid="false">
                    <option value="1"> Điện thoại </option>
                    <option value="2"> Máy tính </option>
                    <option value="3"> Tai nghe </option>
                    <option value="4"> Phụ kiện khác </option>
                    <option value="7"> Game </option>
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ID_HSX, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select htmlattributes="{ class = form-control }" id="ID_HSX" name="ID_HSX" class="form-group" aria-invalid="false">
                    <option value="1"> Apple </option>
                    <option value="2"> Microsoft </option>
                    <option value="3"> Google </option>
                    <option value="4"> Dell </option>
                    <option value="5"> Acer </option>
                    <option value="6"> Asus </option>
                    <option value="7"> Samsung </option>
                    <option value="8"> Xiaomi </option>
                    <option value="9"> Oppo </option>
                    <option value="10"> Nokia </option>
                    <option value="11"> Vivo </option>
                    <option value="12"> Logitech </option>
                    <option value="14"> Intel </option>
                    <option value="15"> Sony </option>
                    <option value="16"> CD Projekt RED </option>
                </select>
            </div>
        </div>
        <!-- HẾT -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay về", "SanPham", "NHANVIEN")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


