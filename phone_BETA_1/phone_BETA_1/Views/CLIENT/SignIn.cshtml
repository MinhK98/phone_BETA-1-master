@model phone_BETA_1.Models.CLIENT
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> ĐĂNG NHẬP KHÁCH HÀNG </title>

    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/main.css">
    <!--===============================================================================================-->

    <style>
        .field-validation-error {
            color: red;
        }

        body {
            background-size: cover;
        }
    </style>

</head>
<body background="~/Content/img1.jpeg">

    @using (Html.BeginForm("Authorize", "CLIENT", FormMethod.Post))
    {
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100 p-t-190 p-b-30">
                    <form class="login100-form validate-form">
                        <div class="login100-form-avatar">
                            <img src="~/Content/avatar-2.png" alt="AVATAR">
                        </div>

                        <span class="login100-form-title p-t-20 p-b-45">
                            PORTAL KHÁCH HÀNG
                        </span>

                        <div class="wrap-input100 validate-input m-b-10">
                            <input class="input100" data-val="true" data-val-required="Tên đăng nhập không được trống!" id="Log_Customer" name="Log_Customer" type="text" value="" placeholder="Tên đăng nhập">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-user"></i>
                            </span>
                        </div>
                        <p style="text-align: center;"><strong>@Html.ValidationMessageFor(model => model.Log_Customer)</strong></p>

                        <div class="wrap-input100 validate-input m-b-10">
                            <input class="input100" data-val="true" data-val-required="Mật khẩu không được trống!" id="Pass" name="Pass" type="password" value="" placeholder="Mật khẩu">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>
                        <p style="text-align: center;"><strong>@Html.ValidationMessageFor(model => model.Pass)</strong></p>

                        <p style="text-align: center; color: red;"><strong>@Html.DisplayFor(model => model.LoginErrorMessage)</strong></p>

                        <div class="container-login100-form-btn p-t-10">
                            <button class="login100-form-btn" type="submit" name="name">
                                Đăng nhập
                            </button>
                        </div>
                        <div class="text-center w-full">
                            <br>
                            <a class="txt1" href="@Url.Action("SignUp", "CLIENT")" name="name"> Đăng ký <i class="fa fa-long-arrow-right"></i></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }

    <!--===============================================================================================-->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/main.js"></script>

</body>
</html>
