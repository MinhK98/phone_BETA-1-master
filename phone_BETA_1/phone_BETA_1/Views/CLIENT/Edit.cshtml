@model phone_BETA_1.Models.CLIENT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout_3.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="visibility: hidden;">
            @Html.LabelFor(model => model.ID_Customer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line valid" data-val="true" data-val-number="The field ID_Customer must be a number." data-val-required="The ID_Customer field is required." id="ID_Customer" name="ID_Customer" type="number" value="" aria-describedby="ID_Customer-error" aria-invalid="false" readonly/>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Log_Customer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Log_Customer, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassWord, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ConfirmPassWord, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group" style="visibility: hidden;">
            @Html.LabelFor(model => model.LoginErrorMessage, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line password input-validation-error" data-val="true" data-val-equalto="Mật khẩu nhập ở 2 trường không trùng khớp!" data-val-equalto-other="*.Pass" id="ConfirmPassWord" name="ConfirmPassWord" type="password" value="" aria-describedby="ConfirmPassWord-error" aria-invalid="true">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Xóa tài khoản!", "XoaTaiKhoan", "KHACHHANG")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
