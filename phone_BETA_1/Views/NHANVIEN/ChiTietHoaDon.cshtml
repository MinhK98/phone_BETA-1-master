@model IEnumerable<phone_BETA_1.Models.CHITIET_HOADON>

@{
    ViewBag.Title = "ChiTietHoaDon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> CHI TIẾT HÓA ĐƠN </h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_SP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price_CTHD)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name_SP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_SP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price_CTHD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_SP)
            </td>
            <td>
                <img style="object-fit: cover;" src="@Url.Content(item.Photo)" width="200" height="105" />
            </td>
        </tr>
    }

</table>
