
@{
    ViewBag.Title = "TimKiemSanPham_Ca3";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Danh sách hóa đơn </title>
</head>
<body>
    @using (Html.BeginForm("TimKiemSanPham_Ca3", "NHANVIEN", FormMethod.Post))
    {
        <select htmlattributes="{ class = form-control }" id="LH" name="LH" class="form-group" aria-invalid="false">
            <option value="1"> Điện thoại </option>
            <option value="2"> Máy tính </option>
            <option value="3"> Tai nghe </option>
            <option value="4"> Phụ kiện khác </option>
        </select>
        <select htmlattributes="{ class = form-control }" id="HSX" name="HSX" class="form-group" aria-invalid="false">
            <option value="1"> Apple </option>
            <option value="2"> Microsoft </option>
            <option value="3"> Google </option>
            <option value="4"> Dell </option>
            <option value="5"> Acer </option>
            <option value="6"> Asus </option>
            <option value="7"> Samsung </option>
            <option value="8"> Xiaomi </option>
            <option value="9"> Oppo </option>
            <option value="10"> Nokia </option>
            <option value="11"> Vivo </option>
            <option value="12"> Logitech </option>
        </select>
        <select htmlattributes="{ class = form-control }" id="NH" name="NH" class="form-group" aria-invalid="false">
            <option value="1"> Tầm trung </option>
            <option value="2"> Giá rẻ </option>
            <option value="3"> Cao cấp </option>
            <option value="4"> Cận cao cấp </option>
            <option value="5"> Tân trang </option>
            <option value="6"> Xách tay </option>
            <option value="7"> Hàng cũ </option>
            <option value="8"> Second hand </option>
        </select>
        <input type="submit" value="Tìm kiếm" />
        <br />
        <br />
        <table cellpadding="0" cellspacing="0" class="table">
            <tr>
                <th> Mã sản phẩm </th>
                <th> Tên sản phẩm </th>
                <th> Giá sản phẩm </th>
                <th> Năm sản phẩm </th>
                <th> Trả góp </th>
                <th> Tình trạng </th>
                <th> Phụ kiện </th>
                <th> Ảnh </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID_SP</td>
                    <td>@item.Name_SP</td>
                    <td>@item.Price_SP</td>
                    <td>@item.Year_SP</td>
                    <td>@item.TraGop</td>
                    <td>@item.TinhTrang</td>
                    <td>@item.PhuKien</td>
                    <td><img style="object-fit: cover;" src="@Url.Content(item.Photo)" width="200" height="105" /></td>
                    <td>
                        |
                        @Html.ActionLink("Chi tiết", "ChiTietSanPham", new { id = item.ID_SP })
                        @Html.ActionLink("Xóa", "XoaSanPham", new { id = item.ID_SP })
                    </td>
                </tr>
            }
        </table>
    }
</body>
</html>

